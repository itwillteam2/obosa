<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEANS//EN"
"http://www.springframework.org/dtd/spring-beans-2.0.dtd"> <!-- 현재 객체(빈)을 생성하기 위한 파일임을 명시 -->

<!-- <beans>태그로 스프링 프로젝트 실행시 컨테이너가 생성할 객체(빈)을 설정 합니다.-->
<beans>
	<!-- MemberSerivceImpl클래스에 대한 빈(객체)생성, 생성된 객체의 setMemberDAO()메소드 호출시 MemberDAOImpl객체를 전달 하여 주입 -->	
	 <bean id="memberService" class="com.spring.ex03.MemberServiceImpl">
	 	
	 	<!-- 주입되는 데이터가 기본형이 아닌 참조형인 경우 ref속성으로 설정합니다. -->
	 	<property name="memberDAO" ref="memberDAO" /> <!-- 매개변수 전달값을 ref에 적는다. -->
	 </bean>
	 
	 <!-- MemberDAOImpl클래스에 대한 빈(객체)생성 -->
	 <bean id="memberDAO" class="com.spring.ex03.MemberDAOImpl">
	 
	 </bean>
	 
	 
</beans>